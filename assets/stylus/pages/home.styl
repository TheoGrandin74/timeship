.container-home
  width 100vw
  height 100vh
  background-image url("../img/NASA-Looking-to-EmDrive-to-Revolutionize-Space-Travel.jpg")
  background-size cover
  display flex
  justify-content center
  align-items center

  .content-home
    background-color rgba(0,0,0,0.5)
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content flex-end
    align-items center

    h1
      width 500px
      font-size 70px
      font-family "Bodoni"
      color #fff
      text-align center
      margin-bottom 50px

    .description
      p
        font-size 20px
        font-family 'Proxima'
        color #fff
        font-weight 300
        margin-bottom 50px

    .discover
      transform translateX(50px)
      transition all 0.5s

      img
        width 50px
        height auto
        fill #fff
        animation spin 2s infinite linear 

      a
        font-size 20px
        font-family 'Proxima'
        color #fff
        font-weight 300
        margin-left 20px
        opacity 0
        transition opacity 0.3s
        vertical-align 70%

      &:hover
        transform translateX(0px)

        a
          opacity 1

    .headphone
      margin-bottom 40px
      margin-top 120px
      display flex
      
      img
        width auto
        height 30px

      .headphone-description

        p
          text-transform uppercase
          font-size 15px
          font-family 'Proxima'
          color #fff
          margin-left 5px


@keyframes spin{
  from{
    transform: rotate(0)
  }
  to{
    transform: rotate(360deg)
  }
}
