.container-home
  width 100vw
  height 100vh
  background-image url("../img/NASA-Looking-to-EmDrive-to-Revolutionize-Space-Travel.jpg")
  background-size cover
  display flex
  justify-content center
  align-items center

  .content-home
    background-color rgba(0,0,0,0.5)
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center

    h1
      width 500px
      font-size 70px
      font-family "Bodoni"
      color #fff
      text-align center
      margin-bottom 50px

    .description
      p
        font-size 20px
        font-family 'Proxima'
        color #fff
        font-weight 300
        margin-bottom 50px

    .discover
      a
        font-size 20px
        font-family 'Proxima'
        color #fff
        font-weight 300
        margin-left 20px
        vertical-align 70%